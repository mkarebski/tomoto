<?xml version="1.0" encoding="UTF-8"?>
	<ScrollView 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/scrollView1"
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	android:background="#343434">
			
		    <LinearLayout
		        android:layout_width="fill_parent"
    			android:layout_height="wrap_content" 
		        android:orientation="vertical" >

		        <com.loopj.android.image.SmartImageView
			        android:id="@+id/photo"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:adjustViewBounds="true"
			        android:contentDescription="@string/zdjecie_oferty"
			        android:minHeight="582dp"
			        android:scaleType="centerCrop"
			        android:src="@drawable/photo_placeholder" />
		        
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Województwo:"
		            android:textColor="#FFFFFF" />
		        	
		        <Spinner
		            android:id="@+id/wojewodztwa"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		        <TextView
		            android:id="@+id/textView2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Miasto:"
		            android:textColor="#FFFFFF" />
		        
		        <Spinner
		            android:id="@+id/miasta"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		        <TextView
		            android:id="@+id/textView3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Marka:"
		            android:textColor="#FFFFFF" />

		        <Spinner
		            android:id="@+id/marka"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		        <TextView
		            android:id="@+id/textView4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Model:"
		            android:textColor="#FFFFFF" />

		        <Spinner
		            android:id="@+id/model"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		        <TextView
		            android:id="@+id/textView5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Rok:"
		            android:textColor="#FFFFFF" />

		        <EditText
		            android:id="@+id/rok"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:inputType="number"
		            android:textColor="#FFFFFF" >

		        </EditText>

		        <TextView
		            android:id="@+id/textView6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Opis:"
		            android:textColor="#FFFFFF" />

		        <EditText
		            android:id="@+id/opis1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:inputType="textMultiLine"
		            android:textColor="#FFFFFF" />

		        <TextView
		            android:id="@+id/textView7"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Przebieg:"
		            android:textColor="#FFFFFF" />

		        <EditText
		            android:id="@+id/przebieg1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="number"
		            android:textColor="#FFFFFF" />

		        <TextView
		            android:id="@+id/textView8"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Cena:"
		            android:textColor="#FFFFFF" />

		        <EditText
		            android:id="@+id/cena"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="number"
		            android:textColor="#FFFFFF" />

				<TextView
		            android:id="@+id/textView9"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Data:"
		            android:textColor="#FFFFFF" />

				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal" >

				    <TextView
				        android:id="@+id/tvDate"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:layout_weight="0.82"
				        android:textColor="#FFFFFF"
				        android:text="TextView" />

				    <Button
				        android:id="@+id/btnChangeDate"
				        style="?android:attr/buttonStyleSmall"
				        android:layout_width="132dp"
				        android:layout_height="34dp"
				        android:layout_gravity="right"
				        android:layout_weight="0.22"
				        android:text="Zmień datę" />

				</LinearLayout>
				
				<DatePicker
			        android:id="@+id/dpResult"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:visibility="gone" />
								
		    	<Button
		            android:id="@+id/btnAdd"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="#ff6347"
		            android:text="Dodaj!"
		            android:onClick="dodajOgloszenie"
		            android:textColor="#fff" />
		    
		    </LinearLayout>
</ScrollView>